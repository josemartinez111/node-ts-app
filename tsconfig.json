{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		/* in case you are importing JSON files */
		"target": "ES2020",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"outDir": "dist",
	},
	"include": [
		"app/**/*"
	],
}